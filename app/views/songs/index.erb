<!-- /songs/index.erb -->

<h1>Songs Index</h1>

<% if !!flash(:message) %>
  <%= flash[:message] %>
<% end %>

<ul>
  <% @songs.each do |song| %>
    <li>
      <p><a href="/songs/<%= song.slug%>"><%= song.name %></a></p>
    </li>
  <% end %>
</ul>

<p><a href="/songs/new">Add a new song</a> or Return to <a href="/">Playlist Index</a></p>
