<h1>Edit Song</h1>
<form method="POST" action="/songs/<%= @song.id %>/edit">
  <input type="hidden" name="_method" value="patch">

  <label for="song_name">Name</label>
  <input type="text" id="song_name" name="song[name]" value="<%= @song.name %>">
  <br>

  <label for="<%= @song.artist.name %>">Artist Name</label>
  <input id="<%= @song.artist.name %>" name="artist[name]" type="text" value="<%= @song.artist.name %>">
  <br>

  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%= "checked" if @song.genres.include?(genre) %>> <%= genre.name %></input>
  <% end %>
  <br>

  <input type="submit" value="Save">
</form>
