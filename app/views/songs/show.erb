
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%=@song.name%></h1>
<h3>Artist: <a href="/artists/<%=@song.artist.slug %>"><%=@song.artist.name%></a></h3><br>
<h3>Genres:</h3><br>
<%@song.genres.each do |genre|%>
  <li><a href="/genres/<%=genre.slug%>">"<%=genre.name%>"</a></li>
<% end %>
