<h2>Artist</h2>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<a href="/artists/<%= @song.artist.slug %>"><%=@song.artist.name%></a>

<h2>New Song</h2>
<p><%=@song.name%></p>
<ul>Genres
  <% @song.artist.genres.uniq.each do |genre| %>
    <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
    <%end%>
  </ul>
