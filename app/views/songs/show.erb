<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Song: <%= @song.name %></h1>
<h2>Artist Name: <%= @song.artist.name %></h2>
<a href="/artists/<%= @song.artist.slug %>">Read About <%= @song.artist.name %></a><br />
<h2>Genres:</h2>
<ul>
<% @song.genres.each do |genre| %>
  <li><%= genre.name %>, <a href="/genres/<%= genre.slug %>">Read About the Genre</a></li>
<% end %>
</ul>