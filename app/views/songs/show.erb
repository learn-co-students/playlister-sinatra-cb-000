<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>

<h2>by <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h2>

<h2>Genre(s) in which you'll find this song:</h2>

<% @song.genres.each do |genre| %>
  <h4><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></h4>
<% end %>

