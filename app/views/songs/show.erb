<!DOCTYPE html>
<html>
    <head>
        <title><%= @song.name %></title>
    </head>
    <body>
    <% if flash.has?(:message) %>
        <%= flash[:message] %>
    <% end %>

    <h1><%= @song.name %></h1>

    <h2>Artist</h2>
        <a href="/artists/<%= @song.artist.slug %>"><h3><%= @song.artist.name %></h3></a>

    <h2>Genres</h2>
    <% @song.genres.each do |genre| %>
        <a href="/genres/<%= genre.slug %>"><h3><%= genre.name %></h3></a>
    <% end %>
    </body>
</html>