<h1>Update Song</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="patch">

  <label for="">Edit Song Name: </label>
  <input type="text" name="song[name]" id="song_name" value="<%= @song.name %>">
  <br>

  <label for="">Edit Artist: </label>
  <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>">
  <br>

  <label for="">Edit Genre(s):</label><br>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
    <br>
  <% end %>

  <input type="submit" name="" value="Save">

</form>