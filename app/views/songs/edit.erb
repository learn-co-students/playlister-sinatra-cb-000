<h1>Update <%= @song.name %></h1>
 
<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
 
  <label>Artist Name:</label>
  <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>"><br></br>  

  <label>Genres: </label>
 
  <br></br> 
 
  <%@genres.each do |g|%>
    <input type="checkbox" name="genres[]" id="<%=g.name%>" value="<%=g.id%>" <%= 'checked' if @song.genres.any? {|k| k.id == g.id} %>><%=g.name%>
  <%end%>
 
  <br></br>

  <input type="submit" value="Save">
</form>