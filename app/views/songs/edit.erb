<h1>Update Song Information</h1>
<form class="" action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="Name">Song Name:</label>
  <input type="text" name="Name" value="<%= @song.name %>">

  <label for="Artist Name">Artist Name:</label>
  <input type="text" name="Artist Name" value="<%= @song.artist.name %>">

  <% @genres.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>"
    id="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
  <% end %>

  <input type="submit" value="Save">
</form>
