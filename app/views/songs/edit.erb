<h1>Edit</h1>
<%= @song.name %>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <p>Artist Name: <input type="text" value="<%= @song.artist.name %>" name="Artist Name"> </p>
  <p>Song Name: <input type="text" value="<%= @song.name %>" name="Name"></p>

  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <% end %>

  <input type="submit" value="Save">

</form>
