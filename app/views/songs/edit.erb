<p>Update <%=@song.artist.name%></p>
<form action='/songs/<%=@song.slug%>' method='post'>
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Song Name:
    <input id="Name" name="song[song_name]">
  </label><br>

  <label >Artist Name:
    <input id="Artist Name" name="song[artist_name]">
  </label><br>

  <% Genre.all.each do |genre| %>
  <% if @song.genres.include?(genre)%>
    <label for="<%= genre.name%>"><%=genre.name%>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" checked>
  </label>
  <%else%>
  <label for="<%= genre.name%>"><%=genre.name%>
      <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
    </label>
      <%end%>
  <% end %>

  <input type='submit' value="Save">

</form>
