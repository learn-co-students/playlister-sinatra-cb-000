<h1>Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
    <input type="hidden" name="_method" value="PATCH">

    <label>Name:</label>
    <br></br>
    <input type="text" name="song[name]" id="song_name" value="<%=@song.name%>">
    <br></br>
    <label>Artist Name:</label>
    <br></br>
    <input type="text" name="artist[name]" id="artist_name" value="<%=@song.artist.name%>">
    <br></br>

    <label>Choose genre(s):</label>
    <br></br>
    <%Genre.all.each do |genre|%>
      <input type="checkbox" name="song[genre_ids][]" id="<%=genre.slug%>" value="<%=genre.id%>"<%='checked' if (@song.genres.include? genre) %>><%=genre.name%></input>
    <%end%>

      <br></br>

  <input type="submit" value="Update Song">
</form>
