<form action="/songs/<%=@song.slug%>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">

    <label>Song:</label>
    <input type="text" name="song[name]" id="name" value="<%=@song.name%>">
    <br>

    <label>Artist Name:</label>
    <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>">
    <br>

    <label>Genre:</label>
    <% Genre.all.each do |genre| %>
        <label><%= genre.name %></label>
        <input type="checkbox" name="song[genre_ids][]" id="<%= genre.name %>" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
    <% end %>
    <br>

    <input type="submit" value="Save">
	
</form>


