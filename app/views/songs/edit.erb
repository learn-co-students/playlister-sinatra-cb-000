<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <p>Name: <input type="text" name="song_name" id="Name" value="<%= @song.name %>"></p>

  <p>Artist Name: <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>"></p>

  <p>Genres:
    <% Genre.all.each do |genre| %>
      <p><input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></p>
    <% end %>
  </p>

  <input type="submit" name="Save" id="Save">

</form>
