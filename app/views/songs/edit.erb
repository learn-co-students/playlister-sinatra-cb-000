
<p>Welcome to the song edit page!</p>

<form method="post" action="/songs/<%= @song.slug %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <label>Artist Name: </label>
  <input type="text" name="Artist Name" value="<%= @song.artist.name %>">
  <br>
  <br>
  
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="Genre[]" id="<%= genre.name %>" value="<%= genre.name %>"><%= genre.name %>
  <% end %>
  <br>
  <br>
  <input type="submit" name="Save" id="Save">
</form>