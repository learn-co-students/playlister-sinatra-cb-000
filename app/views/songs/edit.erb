<html>
  <form action="/songs/<%=@song.slug%>" method="POST">
    <h1><%= @song.name %></h1><br></br>

    <label>Artist:</label>
    <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>">
    <br></br>

    <label>Genres:</label><br>
    <% Genre.all.each do |genre| %>
      <input type="checkbox" name="genres[]" id="<%=genre.name%>" value="<%=genre.id%>"><%=genre.name%><br>
    <% end %>

    <br></br>

    <input type="submit" value="Save" id="Save">

  </form>
</html>
