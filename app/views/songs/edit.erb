<form action="/songs/<%=@song.slug%>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <label>Song Name:</label>
  <input type="text" name="song[name]" id="Name" value="<%=@song.name%>">
  <br>
  <label>Artist Name:</label>
  <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>">
  <br>
  <label>Genre:</label>
  <%Genre.all.each do |g|%>
  <label><%=g.name%></label>
  <input type="checkbox" name="song[genre_ids][]" id="<%=g.name%>" value="<%=g.id%>" <%='checked' if @song.genres.include?(g) %>><%=g.name%></input>
  <%end%>
  <input type="submit" id="Save">
</form>
