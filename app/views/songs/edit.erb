<h1>Edit <%= @song.name %></h1>
<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="patch" />
  <label for="song_name">Name</label>
  <br></br>
  <input type="text" name="song_name" id="song_name" value="<%= @song.name %>">
  <br></br>
  <label for="artist_name">Artist Name</label>
  <br></br>
  <input type="text" name="artist_name" id="artist_name" value="<%= @song.artist.name %>">
  <br></br>
  <label>Genre</label>
  <br></br>
  <% Genre.all.each do |genre| %>
    <input <% if @song.genre_ids.include?(genre.id) %>checked<% end %> id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %>
  <% end %><br><br>
  <input type="submit" value="Save">
</form>
