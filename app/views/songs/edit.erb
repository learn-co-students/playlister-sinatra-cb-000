<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <input type="hidden" id="hidden" name="song_id" value="<%= @song.id %>">

  <%= @song.name %>


  <% Genre.all.each do |genre| %>

      <label id="<%= genre.name %>" >  <%= genre.name %> </label>
      <p><input  type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %> > <%= genre.name %></p>

  <% end %>


  <input type="text" name="artist_name" value="<%= @song.artist.name %>" id="Artist Name">

  <input type="submit" id="submit" value="Save">

</form>
