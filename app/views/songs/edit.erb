<h1>Edit Song</h1>
<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Song Name: <input type="text" name="song[name]" id="Name" value="<%= @song.name %>"></input></p>
  <p>Artist Name: <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>"></input></p>
  <p>
    <% @genres.each do |genre| %>
      <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @song.genres.include? genre %>><%= genre.name %></input>
    <% end %>
  </p>
  <p><input type="submit" value="Save"></p>
</form>
