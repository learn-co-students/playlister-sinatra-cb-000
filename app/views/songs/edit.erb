<html>
  <body>
    <% if flash.has?(:message) %>
      <%= flash[:message] %>
    <% end %>
    <form method='post' action='/songs/<%= @song.slug %>'>
      <h1>Artist Name</h1>
      <input type="text" name="Artist Name" id="Artist Name" value="<%= @song.artist.name %>">
      <h1>Song Name</h1>
      <input type="text" name="Name" value="<%= @song.name %>">
      <h1>Genres Name</h1>
      <% Genre.all.uniq.each do |g|%>
          <input type="checkbox" name="genres[]" value="<%=g.id%>" id="<%=g.name%>" <%='checked' if @song.genres.include?(g) %>><%=g.name%></input>
      <%end%>
      <input type="submit" value="Save">
    </form>
  </body>
</html>
