<h1>Create a New Song</h1>
<form action="/songs" method="post">
  <p><label for="name"> Song Name: </label><input id="name" type="text" name="name" required></p>
  <p><label for="artist"> Artist Name: </label><input id="artist" type="text" name="artist" required></p>
  <label> Genres: </label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genre_ids[]" value="<%= genre.id %>">
  <% end %>

  <input type="submit" value="Create Song">
</form>
