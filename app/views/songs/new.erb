<h1>Add a new song</h1>
<form method="post" action="/songs">
  <label for="song_name">Song Name:</label>
  <input type="text" id="song_name" name="song[name]"><br />

  <h2>Choose an Existing Artist</h2>
  <% @artists.each do |artist| %>
    <input type="radio" id="<%= artist.name %>" name="song[artist_id]" value="<%= artist.id %>"><%= artist.name %></br>
  <% end %>

  <h2>Create a New Artist</h2>
  <label for="new_artist">Artist Name:</label>
  <input type="text" id="new_artist" name="artist[name]"><br />

  <h2>Choose genres:</h2>
  <% @genres.each do |genre| %>
    <input type="checkbox" id="<%= genre.name %>" name="song[genre_ids][]" value="<%= genre.id %>"><%= genre.name.capitalize %><br />
  <% end %>

  <h2>Add a New Genre</h2>
  <label for="new_genre">Name of Genre:</label>
  <input type="text" id="new_genre" name="genre[name]"><br />
  <br />
  <input type="submit" value="Submit">
</form>
