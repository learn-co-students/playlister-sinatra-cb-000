<h1>New Song</h1>
<form action="/songs" method="post">

  <p><input type="text" name="song[name]" placeholder="song name" id="Name"></p>

  <p><input type="text" name="artist" placeholder="artist name" id="Artist Name"></p>

  <h3>Genres</h3>
  <% Genre.all.each do |genre| %>
    <p><label for="<%= genre.name %>"><%= genre.name %></label><input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>"></p>
  <% end %>

  <input type="submit" id="Create" value="Create">

</form>
