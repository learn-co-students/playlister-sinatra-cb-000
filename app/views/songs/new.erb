<h1>Add a Song</h1>

<form action="/songs" method="post">
<label>Name</label><input type="text" name="song_name" id="Name" />
<br><br>
<label>Genres</label>
<% @genres.each do |genre|%>
<input type="checkbox" name="genres[]" value="<%=genre.name%>" id="<%=genre.name%>">
<%= genre.name %>
<% end %>
<br><br>
<label>Artist Name</label>
<input type="text" name="artist_name" id="Artist Name">
<br><br>
<input type="submit" value="Create">
</form>
