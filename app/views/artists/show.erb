<h1><%= @artist.name %></h1>

<h2>Songs by <%= @artist.name %></h2>

<% @artist.songs.each do |song| %>
    <h4><a href="/songs/<%= song.slug %>"><%= song.name %></a></h4>
<% end %>

<h2>Genres in which you'll find <%= @artist.name %>:</h2>

<% @artist.genres.uniq.each do |genre| %>
    <h4><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></h4>
    <% end %>
