<!DOCTYPE html>
<html>
    <head>
        <title><%= @artist.name %></title>
    </head>
    <body>
    <h1><%= @artist.name %></h1>

    <h2>Songs</h2>
    <% @artist.songs.each do |song| %>
        <a href="/songs/<%= song.slug %>"><h3><%= song.name %></h3></a>
    <% end %>

    <h2>Genres</h2>
    <% @artist.genres.each do |genre| %>
        <a href="/genres/<%= genre.slug %>"><h3><%= genre.name %></h3></a>
    <% end %>
    </body>
</html>