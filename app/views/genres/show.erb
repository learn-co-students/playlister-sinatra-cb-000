<h1><%= @genre.name %></h1>

<h2><%= @genre.name %> Artists</h2>

<% @genre.artists.each do |artist| %>
    <h4><a href="/artists/<%= artist.slug %>"><%= artist.name %></a></h4>
<% end %>

<h2><%= @genre.name %> Songs:</h2>

<% @genre.songs.each do |song| %>
    <h4><a href="/songs/<%= song.slug %>"><%= song.name %></a></h4>
<% end %>