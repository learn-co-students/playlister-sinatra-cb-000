<!DOCTYPE html>
<html>
    <head>
        <title><%= @genre.name %></title>
    </head>
    <body>
    <h1><%= @genre.name %></h1>

    <h2>Songs</h2>
    <% @genre.songs.each do |song| %>
        <a href="/songs/<%= song.slug %>"><h3><%= song.name %></h3></a>
    <% end %>

    <h2>Artists</h2>
    <% @genre.artists.each do |artist| %>
        <a href="/artists/<%= artist.slug %>"><h3><%= artist.name %></h3></a>
    <% end %>
    </body>
</html>